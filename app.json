{
  "expo": {
    "name": "SDU-Ride",
    "slug": "sduride",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/sdurideIcon.png",
    "scheme": "sduride",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIStatusBarStyle": "UIStatusBarStyleLightContent"
      }
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/sduridebg.png",
        "backgroundColor": "#2b2e56"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/sduridebg.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Разрешите доступ к галерее для выбора аватара",
          "cameraPermission": "Разрешите доступ к камере, если хотите сделать фото"
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/sduridebg.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font"
    ],
    
    "experiments": {
      "typedRoutes": true,
      "newArchEnabled": true
    }
  }
}
